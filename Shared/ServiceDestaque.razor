@code {
    [Parameter] 
    public string ImageUrl { get; set; } = "";

    [Parameter] 
    public string ImageAlt { get; set; } = "";

    [Parameter] 
    public string Title { get; set; } = "";

    [Parameter] 
    public string Description { get; set; } = "";

    [Parameter]
    public string DetailsUrl { get; set; } = "";

    [Parameter] 
    public string GlowColor { get; set; } = "#f1c533";
}

<div class="relative bg-gray-800 rounded-lg overflow-hidden shadow-lg transition duration-300 hover:scale-105 flex flex-col"
     onmouseover="this.style.boxShadow = '0 0 20px @GlowColor'; this.style.borderColor = '@GlowColor'; this.style.borderWidth = '2px'; this.style.borderStyle = 'solid';"
     onmouseout="this.style.boxShadow = ''; this.style.border = '';">
  <div class="overflow-hidden">
    <img 
      src="@ImageUrl" 
      alt="@ImageAlt" 
      class="w-full object-contain" />
  </div>
  <div class="p-6 flex flex-col flex-grow">
    <p class="text-gray-300">@Description</p>
    <div class="flex justify-end items-center mt-auto">
      <a
        href="@DetailsUrl"
        class="hover:text-[#f1c533] transition text-white font-bold py-2"
        >Saiba Mais â†’
      </a>
    </div>
  </div>
</div>
