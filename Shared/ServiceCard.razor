@code {
    [Parameter]
    public string ImageUrl { get; set; } = "";

    [Parameter]
    public string ImageAlt { get; set; } = "";

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Description { get; set; } = "";

    [Parameter]
    public string Price { get; set; } = "";

    [Parameter]
    public string DetailsUrl { get; set; } = "";
}

<div class="bg-[#1c1c18] rounded-lg overflow-hidden shadow-lg border border-gray-700 flex flex-col text-white">
  <div class="overflow-hidden">
    <img
      src="@ImageUrl"
      alt="@ImageAlt"
      class="w-full object-contain" />
  </div>
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-xl font-bold mb-2">@Title</h3>
    <p class="text-gray-300 mb-4">@Description</p>
    <div class="flex justify-between items-center mt-auto">
      <span class="text-xl font-bold text-yellow-400">A partir de @Price</span>
      <a
        href="@DetailsUrl"
        class="bg-blue-700 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded transition duration-300"
        >Ver detalhes</a
      >
    </div>
  </div>
</div>
